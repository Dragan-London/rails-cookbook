<h1>Show Page</h1>
<h1><%= @category.name %> (Category Name)</h1>
<hr>
<ul>
  <h2>Bookmarks:</h2>
<% @category.bookmarks.each do |bookmark| %>
  <li>
    <h3><%= bookmark.recipe.name %></h3>
    <p><%= bookmark.recipe.description %></p>
    <p><%= bookmark.comment %></p>
    <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you shure ?"} %>
  </li>
<% end %>
</ul>

<hr>
<%= link_to "Add bookmark", new_category_bookmark_path(@category), class: "btn btn-warning" %>
<br>
<br>
<%= link_to "Back to Home Page", categories_path, class: "btn btn-primary" %>
